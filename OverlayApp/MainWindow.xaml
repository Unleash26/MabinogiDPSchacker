<Window x:Class="OverlayApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="Skill Overlay"
        Width="360" Height="450"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="True"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="28" />
            <RowDefinition Height="24" />
            <RowDefinition Height="*" />
            <RowDefinition Height="14" />
        </Grid.RowDefinitions>

        <!-- Drag/control bar (Row 0) -->
        <Border Grid.Row="0"
                Background="#33ffffff"
                CornerRadius="12,12,0,0"
                MouseLeftButtonDown="DragBar_MouseLeftButtonDown">
            <DockPanel Margin="8,0,8,0">
                <TextBlock x:Name="HotkeyHint"
                           DockPanel.Dock="Left"
                           Text="Ctrl+Shift+L: ãƒ­ãƒƒã‚¯"
                           Foreground="#888" FontSize="10"
                           VerticalAlignment="Center" />
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                    <Button x:Name="LockButton"
                            Content="ðŸ”“"
                            Click="LockButton_Click"
                            Background="Transparent" Foreground="White"
                            BorderThickness="0" FontSize="14"
                            Cursor="Hand" Padding="4,2"
                            ToolTip="ã‚¯ãƒªãƒƒã‚¯é€éŽã®åˆ‡æ›¿ (Ctrl+Shift+L)" />
                    <Button Content="âœ•"
                            Click="CloseButton_Click"
                            Background="Transparent" Foreground="#aaa"
                            BorderThickness="0" FontSize="14"
                            Cursor="Hand" Padding="4,2" />
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Player select bar (Row 1) -->
        <Border Grid.Row="1" Background="#22ffffff">
            <DockPanel Margin="8,2,8,2">
                <TextBlock Text="ã‚­ãƒ£ãƒ©:" Foreground="#aaa" FontSize="10"
                           VerticalAlignment="Center" Margin="0,0,4,0" />
                <ComboBox x:Name="PlayerComboBox"
                          SelectionChanged="PlayerComboBox_SelectionChanged"
                          FontSize="10" MinWidth="80"
                          VerticalAlignment="Center">
                    <ComboBox.Style>
                        <Style TargetType="ComboBox">
                            <Setter Property="Foreground" Value="#e0e0e0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ComboBox">
                                        <Grid>
                                            <ToggleButton x:Name="ToggleButton"
                                                          Focusable="False"
                                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                          ClickMode="Press">
                                                <ToggleButton.Template>
                                                    <ControlTemplate TargetType="ToggleButton">
                                                        <Border Background="#CC2a2a2c" BorderBrush="#44ffffff" BorderThickness="1" CornerRadius="4" Padding="6,2,18,2">
                                                            <ContentPresenter/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </ToggleButton.Template>
                                            </ToggleButton>
                                            <!-- Arrow -->
                                            <TextBlock Text="â–¾" Foreground="#888" FontSize="9"
                                                       HorizontalAlignment="Right" VerticalAlignment="Center"
                                                       Margin="0,0,6,0" IsHitTestVisible="False"/>
                                            <!-- Selected item text -->
                                            <ContentPresenter x:Name="ContentSite"
                                                              Content="{TemplateBinding SelectionBoxItem}"
                                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                              Margin="6,2,18,2"
                                                              VerticalAlignment="Center"
                                                              HorizontalAlignment="Left"
                                                              IsHitTestVisible="False"/>
                                            <Popup x:Name="PART_Popup"
                                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                                   AllowsTransparency="True"
                                                   PopupAnimation="Slide"
                                                   Placement="Bottom">
                                                <Border Background="#EE1c1c1e" BorderBrush="#44ffffff" BorderThickness="1"
                                                        CornerRadius="4" Padding="0,2"
                                                        MinWidth="{TemplateBinding ActualWidth}"
                                                        MaxHeight="200">
                                                    <ScrollViewer>
                                                        <StackPanel IsItemsHost="True"/>
                                                    </ScrollViewer>
                                                </Border>
                                            </Popup>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ComboBox.Style>
                </ComboBox>
            </DockPanel>
        </Border>

        <!-- WebView2 (Row 2) -->
        <wv2:WebView2 x:Name="webView"
                      Grid.Row="2"
                      DefaultBackgroundColor="Transparent" />

        <!-- Resize bar (Row 3) â€” OUTSIDE WebView2 -->
        <Border Grid.Row="3"
                Background="#22ffffff"
                CornerRadius="0,0,12,12">
            <Thumb x:Name="ResizeGrip"
                   HorizontalAlignment="Right"
                   Cursor="SizeNWSE"
                   Opacity="0.6"
                   DragDelta="ResizeGrip_DragDelta">
                <Thumb.Template>
                    <ControlTemplate>
                        <Canvas Width="14" Height="14" Margin="0,0,2,0">
                            <Line X1="10" Y1="14" X2="14" Y2="10" Stroke="#aaa" StrokeThickness="1.5"/>
                            <Line X1="6" Y1="14" X2="14" Y2="6" Stroke="#aaa" StrokeThickness="1.5"/>
                            <Line X1="2" Y1="14" X2="14" Y2="2" Stroke="#aaa" StrokeThickness="1.5"/>
                        </Canvas>
                    </ControlTemplate>
                </Thumb.Template>
            </Thumb>
        </Border>
    </Grid>
</Window>
