<Window x:Class="OverlayApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="Skill Overlay"
        Width="360" Height="450"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="True"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="28" />
            <RowDefinition Height="*" />
            <RowDefinition Height="14" />
        </Grid.RowDefinitions>

        <!-- Drag/control bar (Row 0) -->
        <Border Grid.Row="0"
                Background="#33ffffff"
                CornerRadius="12,12,0,0"
                MouseLeftButtonDown="DragBar_MouseLeftButtonDown">
            <DockPanel Margin="8,0,8,0">
                <TextBlock x:Name="HotkeyHint"
                           DockPanel.Dock="Left"
                           Text="Ctrl+Shift+L: ãƒ­ãƒƒã‚¯"
                           Foreground="#888" FontSize="10"
                           VerticalAlignment="Center" />
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                    <Button x:Name="LockButton"
                            Content="ðŸ”“"
                            Click="LockButton_Click"
                            Background="Transparent" Foreground="White"
                            BorderThickness="0" FontSize="14"
                            Cursor="Hand" Padding="4,2"
                            ToolTip="ã‚¯ãƒªãƒƒã‚¯é€éŽã®åˆ‡æ›¿ (Ctrl+Shift+L)" />
                    <Button Content="âœ•"
                            Click="CloseButton_Click"
                            Background="Transparent" Foreground="#aaa"
                            BorderThickness="0" FontSize="14"
                            Cursor="Hand" Padding="4,2" />
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- WebView2 (Row 1) -->
        <wv2:WebView2 x:Name="webView"
                      Grid.Row="1"
                      DefaultBackgroundColor="Transparent" />

        <!-- Resize bar (Row 2) â€” OUTSIDE WebView2 -->
        <Border Grid.Row="2"
                Background="#22ffffff"
                CornerRadius="0,0,12,12">
            <Thumb x:Name="ResizeGrip"
                   HorizontalAlignment="Right"
                   Cursor="SizeNWSE"
                   Opacity="0.6"
                   DragDelta="ResizeGrip_DragDelta">
                <Thumb.Template>
                    <ControlTemplate>
                        <Canvas Width="14" Height="14" Margin="0,0,2,0">
                            <Line X1="10" Y1="14" X2="14" Y2="10" Stroke="#aaa" StrokeThickness="1.5"/>
                            <Line X1="6" Y1="14" X2="14" Y2="6" Stroke="#aaa" StrokeThickness="1.5"/>
                            <Line X1="2" Y1="14" X2="14" Y2="2" Stroke="#aaa" StrokeThickness="1.5"/>
                        </Canvas>
                    </ControlTemplate>
                </Thumb.Template>
            </Thumb>
        </Border>
    </Grid>
</Window>
